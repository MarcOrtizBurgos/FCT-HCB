<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperaPartida">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/email"
            android:textSize="15sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hintTextColor="#78909C"
            android:text="Tens una partida iniciada"
            android:textAlignment="center"
            android:textSize="34sp"
            tools:ignore="TextContrastCheck,TextContrastCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hintTextColor="#78909C"
            android:text="QuÃ¨ vols fer?"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,TextContrastCheck" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/recuperaPartidabutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuperar Partida" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/novaPartidabutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nova partida" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>